{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentPrefix": {
            "type": "string",
            "defaultValue": "dep01"
        },
        "sharedResourceGroup": {
            "type": "string"
        },
        "vmSize_layer1": {
            "type": "string",
            "defaultValue": "Standard_A1",
            "minLength": 1
        },
        "vmSize_layer2": {
            "type": "string",
            "defaultValue": "Standard_A1",
            "minLength": 1
        },
        "ubuntuOSVersion": {
            "type": "string",
            "defaultValue": "16.04.0-LTS",
            "allowedValues": [
                "15.10",
                "14.04.4-LTS",
                "16.04.0-LTS"
            ],
            "metadata": {
                "description": "The Ubuntu version for the VM. This will pick a fully patched image of this given Ubuntu version. Allowed values are: 15.10, 14.04.4-LTS."
            }
        },
        "instanceCount_layer1": {
            "type": "int",
            "metadata": {
                "description": "Number of VM instances in layer 1 (100 or less)"
            },
            "minValue": 1,
            "maxValue": 100
        },
        "instanceCount_layer2": {
            "type": "int",
            "metadata": {
                "description": "Number of VM instances in layer 2 (100 or less)"
            },
            "minValue": 1,
            "maxValue": 100
        },
        "adminUsername": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Administrator username on all VMs"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Administrator password on all VMs"
            }
        },
        "scriptLocation": {
            "type": "string",
            "metadata": {
                "description": "Blob storage Link with SAS to the installation script"
            }
        },
        "scriptParameters_l1": {
            "type": "securestring",
            "metadata": {
                "description": "The command line parameters to pass into the installation script for layer 1 vmss"
            }
        },
        "scriptParameters_l2": {
            "type": "securestring",
            "metadata": {
                "description": "The command line parameters to pass into the installation script for layer 2 vmss"
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "storageAccountType": "Standard_LRS",

        "newStorageAccountSuffix": "[concat(parameters('deploymentPrefix'), 'sa')]",
        "uniqueStringArray": [
            "[concat(uniqueString(concat(resourceGroup().id, variables('newStorageAccountSuffix'), '0')), variables('newStorageAccountSuffix'))]",
            "[concat(uniqueString(concat(resourceGroup().id, variables('newStorageAccountSuffix'), '1')), variables('newStorageAccountSuffix'))]",
            "[concat(uniqueString(concat(resourceGroup().id, variables('newStorageAccountSuffix'), '2')), variables('newStorageAccountSuffix'))]",
            "[concat(uniqueString(concat(resourceGroup().id, variables('newStorageAccountSuffix'), '3')), variables('newStorageAccountSuffix'))]",
            "[concat(uniqueString(concat(resourceGroup().id, variables('newStorageAccountSuffix'), '4')), variables('newStorageAccountSuffix'))]"
        ],
        "vhdContainerName": "[concat(parameters('deploymentPrefix'), '-vhd')]",
        "osDiskName": "[concat(parameters('deploymentPrefix'), '-osdisk')]",

        "_vnetName": "[concat(parameters('deploymentPrefix'), '-vnet')]",
        "vnet_id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('sharedResourceGroup'), '/providers/Microsoft.Network/virtualNetworks/', variables('_vnetName'))]",
        "subnetName": "[concat(parameters('deploymentPrefix'), '-subnet')]",
        "_publicIPAddressName": "[concat(parameters('deploymentPrefix'), '-pip')]",
        "deliveryloadbalancerpip_addressid": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('sharedResourceGroup'), '/providers/Microsoft.Network/publicIPAddresses/', variables('_publicIPAddressName'))]",

        "loadBalancerName_l1": "[concat(parameters('deploymentPrefix'), '-lb_l1')]",
        "lb_l1_ID": "[resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName_l1'))]",
        "natPoolName_l1": "[concat(parameters('deploymentPrefix'), '-natpool-l1')]",
        "bePoolName_l1": "[concat(parameters('deploymentPrefix'), '-bepool-l1')]",
        "nicName_l1": "[concat(parameters('deploymentPrefix'), '-nic-l1')]",
        "ipConfigName_l1": "[concat(parameters('deploymentPrefix'), '-ipconfig-l1')]",
        "frontEndIPConfigID": "[concat(variables('lb_l1_ID'), '/frontendIPConfigurations/loadBalancerFrontEnd')]",

        "loadBalancerName_l2": "[concat(parameters('deploymentPrefix'), '-lb_l2')]",
        "lb_l2_ID": "[resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName_l2'))]",
        "natPoolName_l2": "[concat(parameters('deploymentPrefix'), '-natpool-l2')]",
        "bePoolName_l2": "[concat(parameters('deploymentPrefix'), '-bepool-l2')]",
        "nicName_l2": "[concat(parameters('deploymentPrefix'), '-nic-l2')]",
        "ipConfigName_l2": "[concat(parameters('deploymentPrefix'), '-ipconfig-l2')]",

        "vmscaleset_layer1name": "[concat(parameters('deploymentPrefix'), '-vmss-l1')]",
        "vmscaleset_layer2name": "[concat(parameters('deploymentPrefix'), '-vmss-l2')]",

        "osType": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "[parameters('ubuntuOSVersion')]",
            "version": "latest"
        },
        "imageReference": "[variables('osType')]",
        "diagnosticsStorageAccountName": "[variables('uniqueStringArray')[0]]",
        "diagnosticsStorageAccountResourceGroup": "[resourceGroup().name]",
        "accountid": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', variables('diagnosticsStorageAccountResourceGroup'), '/providers/', 'Microsoft.Storage/storageAccounts/', variables('diagnosticsStorageAccountName'))]",
        "wadlogs": "<WadCfg><DiagnosticMonitorConfiguration>",
        "wadperfcounters1": "<PerformanceCounters scheduledTransferPeriod=\"PT1M\"><PerformanceCounterConfiguration counterSpecifier=\"\\Memory\\AvailableMemory\" sampleRate=\"PT15S\" unit=\"Bytes\"><annotation displayName=\"Memory available\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Memory\\PercentAvailableMemory\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"Mem. percent available\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Memory\\UsedMemory\" sampleRate=\"PT15S\" unit=\"Bytes\"><annotation displayName=\"Memory used\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Memory\\PercentUsedMemory\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"Memory percentage\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Memory\\PercentUsedByCache\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"Mem. used by cache\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Processor\\PercentIdleTime\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"CPU idle time\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Processor\\PercentUserTime\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"CPU user time\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Processor\\PercentProcessorTime\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"CPU percentage guest OS\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\Processor\\PercentIOWaitTime\" sampleRate=\"PT15S\" unit=\"Percent\"><annotation displayName=\"CPU IO wait time\" locale=\"en-us\"/></PerformanceCounterConfiguration>",
        "wadperfcounters2": "<PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk\\BytesPerSecond\" sampleRate=\"PT15S\" unit=\"BytesPerSecond\"><annotation displayName=\"Disk total bytes\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk\\ReadBytesPerSecond\" sampleRate=\"PT15S\" unit=\"BytesPerSecond\"><annotation displayName=\"Disk read guest OS\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk\\WriteBytesPerSecond\" sampleRate=\"PT15S\" unit=\"BytesPerSecond\"><annotation displayName=\"Disk write guest OS\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk\\TransfersPerSecond\" sampleRate=\"PT15S\" unit=\"CountPerSecond\"><annotation displayName=\"Disk transfers\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk\\ReadsPerSecond\" sampleRate=\"PT15S\" unit=\"CountPerSecond\"><annotation displayName=\"Disk reads\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk\\WritesPerSecond\" sampleRate=\"PT15S\" unit=\"CountPerSecond\"><annotation displayName=\"Disk writes\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk\\AverageReadTime\" sampleRate=\"PT15S\" unit=\"Seconds\"><annotation displayName=\"Disk read time\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk\\AverageWriteTime\" sampleRate=\"PT15S\" unit=\"Seconds\"><annotation displayName=\"Disk write time\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk\\AverageTransferTime\" sampleRate=\"PT15S\" unit=\"Seconds\"><annotation displayName=\"Disk transfer time\" locale=\"en-us\"/></PerformanceCounterConfiguration><PerformanceCounterConfiguration counterSpecifier=\"\\PhysicalDisk\\AverageDiskQueueLength\" sampleRate=\"PT15S\" unit=\"Count\"><annotation displayName=\"Disk queue length\" locale=\"en-us\"/></PerformanceCounterConfiguration></PerformanceCounters>",
        "wadcfgxstart": "[concat(variables('wadlogs'), variables('wadperfcounters1'), variables('wadperfcounters2'), '<Metrics resourceId=\"')]",
        "wadmetricsresourceid": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name , '/providers/', 'Microsoft.Compute/virtualMachineScaleSets/')]",
        "wadcfgxend": "[concat('\"><MetricAggregation scheduledTransferPeriod=\"PT1H\"/><MetricAggregation scheduledTransferPeriod=\"PT1M\"/></Metrics></DiagnosticMonitorConfiguration></WadCfg>')]",

        "keyVaultName": "[concat(parameters('deploymentPrefix'), '-keyvault')]",
        "installationScriptFileName_l1": "[concat('run.sh',' ', parameters('scriptParameters_l1'))]",
        "installationScriptFileName_l2": "[concat('run.sh',' ', parameters('scriptParameters_l2'))]"

    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('uniqueStringArray')[copyIndex()]]",
            "location": "[variables('location')]",
            "apiVersion": "2015-06-15",
            "tags": {
                "displayName": "StorageAccounts"
            },
            "copy": {
                "name": "storageLoop",
                "count": "[length(variables('uniqueStringArray'))]"
            },
            "properties": {
                "accountType": "[variables('storageAccountType')]"
            }
        },
        {
            "type": "Microsoft.Network/loadBalancers",
            "name": "[variables('loadBalancerName_l1')]",
            "location": "[variables('location')]",
            "apiVersion": "2015-06-15",
            "tags": {
                "displayName": "LoadBalancer_l1"
            },
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[variables('deliveryloadbalancerpip_addressid')]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[variables('bePoolName_l1')]"
                    }
                ],
                "inboundNatPools": [
                    {
                        "name": "[variables('natPoolName_l1')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('frontEndIPConfigID')]"
                            },
                            "protocol": "tcp",
                            "frontendPortRangeStart": 50000,
                            "frontendPortRangeEnd": 50099,
                            "backendPort": 22
                        }
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "stream01",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('frontEndIPConfigID')]"
                            },
                            "backendAddressPool": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName_l1')), '/backendAddressPools/', variables('bePoolName_l1'))]"
                            },
                            "probe": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName_l1')), '/probes/lbprobe')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": 5001,
                            "backendPort": 5001,
                            "idleTimeoutInMinutes": 15
                        }
                    },
                    {
                        "name": "stream02",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('frontEndIPConfigID')]"
                            },
                            "backendAddressPool": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName_l1')), '/backendAddressPools/', variables('bePoolName_l1'))]"
                            },
                            "probe": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName_l1')), '/probes/lbprobe')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": 5002,
                            "backendPort": 5002,
                            "idleTimeoutInMinutes": 15
                        }
                    }
                ],
                "probes": [
                    {
                        "name": "lbprobe",
                        "properties": {
                            "protocol": "Http",
                            "port": 80,
                            "requestPath": "/health",
                            "intervalInSeconds": 5,
                            "numberOfProbes": 2
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/loadBalancers",
            "name": "[variables('loadBalancerName_l2')]",
            "location": "[variables('location')]",
            "apiVersion": "2015-06-15",
            "tags": {
                "displayName": "LoadBalancer_l2"
            },
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "subnet": {
                                "id": "[concat(variables('vnet_id'), '/subnets/', variables('subnetName'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[variables('bePoolName_l2')]"
                    }
                ],
                "inboundNatPools": [
                    {
                        "name": "[variables('natPoolName_l2')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('frontEndIPConfigID')]"
                            },
                            "protocol": "tcp",
                            "frontendPortRangeStart": 50000,
                            "frontendPortRangeEnd": 50099,
                            "backendPort": 22
                        }
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "stream01",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('frontEndIPConfigID')]"
                            },
                            "backendAddressPool": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName_l2')), '/backendAddressPools/', variables('bePoolName_l2'))]"
                            },
                            "probe": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName_l2')), '/probes/lbprobe')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": 5001,
                            "backendPort": 5001,
                            "idleTimeoutInMinutes": 15
                        }
                    },
                    {
                        "name": "stream02",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('frontEndIPConfigID')]"
                            },
                            "backendAddressPool": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName_l2')), '/backendAddressPools/', variables('bePoolName_l2'))]"
                            },
                            "probe": {
                                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('loadBalancerName_l2')), '/probes/lbprobe')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": 5002,
                            "backendPort": 5002,
                            "idleTimeoutInMinutes": 15
                        }
                    }
                ],
                "probes": [
                    {
                        "name": "lbprobe",
                        "properties": {
                            "protocol": "Http",
                            "port": 80,
                            "requestPath": "/health",
                            "intervalInSeconds": 5,
                            "numberOfProbes": 2
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachineScaleSets",
            "name": "[variables('vmscaleset_layer1name')]",
            "location": "[variables('location')]",
            "apiVersion": "2016-03-30",
            "tags": {
                "displayName": "VMScaleSet_Layer1"
            },
            "dependsOn": [
                "storageLoop",
                "[concat('Microsoft.Network/loadBalancers/', variables('loadBalancerName_l1'))]"
            ],
            "sku": {
                "name": "[parameters('vmSize_layer1')]",
                "tier": "Standard",
                "capacity": "[parameters('instanceCount_layer1')]"
            },
            "properties": {
                "overprovision": "true",
                "upgradePolicy": {
                    "mode": "Manual"
                },
                "virtualMachineProfile": {
                    "storageProfile": {
                        "osDisk": {
                            "vhdContainers": [
                                "[concat('https://', variables('uniqueStringArray')[0], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', variables('uniqueStringArray')[1], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', variables('uniqueStringArray')[2], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', variables('uniqueStringArray')[3], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', variables('uniqueStringArray')[4], '.blob.core.windows.net/', variables('vhdContainerName'))]"
                            ],
                            "name": "[variables('osDiskName')]",
                            "caching": "ReadOnly",
                            "createOption": "FromImage"
                        },
                        "imageReference": "[variables('imageReference')]"
                    },
                    "osProfile": {
                        "computerNamePrefix": "[variables('vmscaleset_layer1name')]",
                        "adminUsername": "[parameters('adminUsername')]",
                        "adminPassword": "[parameters('adminPassword')]"
                    },
                    "networkProfile": {
                        "networkInterfaceConfigurations": [
                            {
                                "name": "[variables('nicName_l1')]",
                                "properties": {
                                    "primary": true,
                                    "ipConfigurations": [
                                        {
                                            "name": "[variables('ipConfigName_l1')]",
                                            "properties": {
                                                "subnet": {
                                                    "id": "[concat(variables('vnet_id'), '/subnets/', variables('subnetName'))]"
                                                },
                                                "loadBalancerBackendAddressPools": [
                                                    {
                                                        "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/loadBalancers/', variables('loadBalancerName_l1'), '/backendAddressPools/', variables('bePoolName_l1'))]"
                                                    }
                                                ],
                                                "loadBalancerInboundNatPools": [
                                                    {
                                                        "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/loadBalancers/', variables('loadBalancerName_l1'), '/inboundNatPools/', variables('natPoolName_l1'))]"
                                                    }
                                                ]
                                            }
                                        }
                                    ]
                                }
                            }
                        ]
                    },
                    "extensionProfile": {
                        "extensions": [
                            {
                                "name": "AzureDiagnostics",
                                "properties": {
                                    "publisher": "Microsoft.OSTCExtensions",
                                    "type": "LinuxDiagnostic",
                                    "typeHandlerVersion": "2.1",
                                    "autoUpgradeMinorVersion": true,
                                    "settings": {
                                        "xmlCfg": "[base64(concat(variables('wadcfgxstart'), variables('wadmetricsresourceid'), variables('vmscaleset_layer1name'), variables('wadcfgxend')))]",
                                        "storageAccount": "[variables('diagnosticsStorageAccountName')]"
                                    },
                                    "protectedSettings": {
                                        "storageAccountName": "[variables('diagnosticsStorageAccountName')]",
                                        "storageAccountKey": "[listkeys(variables('accountid'), '2015-06-15').key1]",
                                        "storageAccountEndPoint": "https://core.windows.net"
                                    }
                                }
                            },
                            {
                                "name": "dockerinstallation",
                                "properties": {
                                    "publisher": "Microsoft.OSTCExtensions",
                                    "type": "CustomScriptForLinux",
                                    "typeHandlerVersion": "1.4",
                                    "autoUpgradeMinorVersion": true,
                                    "settings": {
                                        "fileUris": [
                                            "[parameters('scriptLocation')]"
                                        ],
                                        "commandToExecute": "[concat('sh ', variables('installationScriptFileName_l1'))]"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachineScaleSets",
            "name": "[variables('vmscaleset_layer2name')]",
            "location": "[variables('location')]",
            "apiVersion": "2016-03-30",
            "tags": {
                "displayName": "VMScaleSet_Layer2"
            },
            "dependsOn": [
                "storageLoop",
                "[concat('Microsoft.Network/loadBalancers/', variables('loadBalancerName_l2'))]"
            ],
            "sku": {
                "name": "[parameters('vmSize_layer2')]",
                "tier": "Standard",
                "capacity": "[parameters('instanceCount_layer2')]"
            },
            "properties": {
                "overprovision": "true",
                "upgradePolicy": {
                    "mode": "Manual"
                },
                "virtualMachineProfile": {
                    "storageProfile": {
                        "osDisk": {
                            "vhdContainers": [
                                "[concat('https://', variables('uniqueStringArray')[0], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', variables('uniqueStringArray')[1], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', variables('uniqueStringArray')[2], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', variables('uniqueStringArray')[3], '.blob.core.windows.net/', variables('vhdContainerName'))]",
                                "[concat('https://', variables('uniqueStringArray')[4], '.blob.core.windows.net/', variables('vhdContainerName'))]"
                            ],
                            "name": "[variables('osDiskName')]",
                            "caching": "ReadOnly",
                            "createOption": "FromImage"
                        },
                        "imageReference": "[variables('imageReference')]"
                    },
                    "osProfile": {
                        "computerNamePrefix": "[variables('vmscaleset_layer2name')]",
                        "adminUsername": "[parameters('adminUsername')]",
                        "adminPassword": "[parameters('adminPassword')]"
                    },
                    "networkProfile": {
                        "networkInterfaceConfigurations": [
                            {
                                "name": "[variables('nicName_l2')]",
                                "properties": {
                                    "primary": true,
                                    "ipConfigurations": [
                                        {
                                            "name": "[variables('ipConfigName_l2')]",
                                            "properties": {
                                                "subnet": {
                                                    "id": "[concat(variables('vnet_id'), '/subnets/', variables('subnetName'))]"
                                                },
                                                "loadBalancerBackendAddressPools": [
                                                    {
                                                        "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/loadBalancers/', variables('loadBalancerName_l2'), '/backendAddressPools/', variables('bePoolName_l2'))]"
                                                    }
                                                ],
                                                "loadBalancerInboundNatPools": [
                                                    {
                                                        "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/loadBalancers/', variables('loadBalancerName_l2'), '/inboundNatPools/', variables('natPoolName_l2'))]"
                                                    }
                                                ]
                                            }
                                        }
                                    ]
                                }
                            }
                        ]
                    },
                    "extensionProfile": {
                        "extensions": [
                            {
                                "name": "AzureDiagnostics",
                                "properties": {
                                    "publisher": "Microsoft.OSTCExtensions",
                                    "type": "LinuxDiagnostic",
                                    "typeHandlerVersion": "2.1",
                                    "autoUpgradeMinorVersion": true,
                                    "settings": {
                                        "xmlCfg": "[base64(concat(variables('wadcfgxstart'), variables('wadmetricsresourceid'), variables('vmscaleset_layer2name'), variables('wadcfgxend')))]",
                                        "storageAccount": "[variables('diagnosticsStorageAccountName')]"
                                    },
                                    "protectedSettings": {
                                        "storageAccountName": "[variables('diagnosticsStorageAccountName')]",
                                        "storageAccountKey": "[listkeys(variables('accountid'), '2015-06-15').key1]",
                                        "storageAccountEndPoint": "https://core.windows.net"
                                    }
                                }
                            },
                            {
                                "name": "dockerinstallation",
                                "properties": {
                                    "publisher": "Microsoft.OSTCExtensions",
                                    "type": "CustomScriptForLinux",
                                    "typeHandlerVersion": "1.4",
                                    "autoUpgradeMinorVersion": true,
                                    "settings": {
                                        "fileUris": [
                                            "[parameters('scriptLocation')]"
                                        ],
                                        "commandToExecute": "[concat('sh ', variables('installationScriptFileName_l2'))]"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}
